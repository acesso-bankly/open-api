
paths:
  /authentication/challenge/{challengeId}/confirm:
    patch:
      tags:
        - Authentication
      parameters:
        - name: challengeId
          in: path
          required: true
          schema:
            type: string
            nullable: true
        - name: api-version
          in: header
          description: Versão da API. Atualmente estamos na 1.0.
          required: true
          schema:
            type: string
      requestBody:
        content:
          application/json-patch+json:
            schema:
              $ref: '#/components/schemas/ConfirmChallengeCommand'
          application/json:
            schema:
              $ref: '#/components/schemas/ConfirmChallengeCommand'
          text/json:
            schema:
              $ref: '#/components/schemas/ConfirmChallengeCommand'
          application/*+json:
            schema:
              $ref: '#/components/schemas/ConfirmChallengeCommand'
      responses:
        '200':
          description: Success
      security:
        - Bearer: [ ]
  /simulator/challenge:
    post:
      tags:
        - Simulator
      parameters:
        - name: api-version
          in: header
          description: Versão da API. Atualmente estamos na 1.0.
          required: true
          schema:
            type: string
      requestBody:
        content:
          application/json-patch+json:
            schema:
              $ref: '#/components/schemas/CreateChallengeSimulatorCommand'
          application/json:
            schema:
              $ref: '#/components/schemas/CreateChallengeSimulatorCommand'
          text/json:
            schema:
              $ref: '#/components/schemas/CreateChallengeSimulatorCommand'
          application/*+json:
            schema:
              $ref: '#/components/schemas/CreateChallengeSimulatorCommand'
      responses:
        '200':
          description: Success
      security:
        - Bearer: [ ]
components:
  schemas:
    CreateChallengeSimulatorCommand:
      required:
        - amount
        - card
        - merchant
      type: object
      properties:
        card:
          $ref: '#/components/schemas/ChallengeCard'
        deviceChannel:
          $ref: '#/components/schemas/DeviceChannel'
        merchant:
          $ref: '#/components/schemas/ChallengeMerchant'
        amount:
          $ref: '#/components/schemas/ChallengeAmount'
      additionalProperties: false

      
    ConfirmChallengeCommand:
      required:
        - documentNumber
      type: object
      properties:
        allowTransaction:
          type: boolean
        documentNumber:
          minLength: 1
          type: string
      additionalProperties: false
    ChallengeCard:
      required:
        - proxy
      type: object
      properties:
        proxy:
          minLength: 1
          type: string
      additionalProperties: false
    DeviceChannel:
      enum:
        - APP
        - BROWSER
      type: string
    ChallengeMerchant:
      required:
        - name
      type: object
      properties:
        name:
          minLength: 1
          type: string
      additionalProperties: false
    ChallengeAmount:
      required:
        - currency
      type: object
      properties:
        value:
          minimum: 0
          exclusiveMinimum: true
          type: number
          format: double
        currency:
          maxLength: 3
          minLength: 3
          type: string
      additionalProperties: false
    
  securitySchemes:
    Bearer:
      type: http
      description: Inclua o token de autorização do tipo Bearer
      scheme: bearer
      bearerFormat: JWT
